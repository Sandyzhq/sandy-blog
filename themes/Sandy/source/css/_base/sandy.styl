body
  width: 100%
  height: 100%
  background-color: #fff
  color: #666
  font-weight: 300
  font-family: 'Lantinghei SC', 'Microsoft YaHei', 'WenQuanYi Micro Hei', sans-serif
  /* for Mac, Windows Vista+, Linux */

html
  width: 100%
  height: 100%

h1,
h2,
h3,
h4,
h5,
h6
  margin: 0 0 30px
  font-weight: 600
  letter-spacing: 1px

a
  -webkit-transition: all .2s ease-in-out
  -moz-transition: all .2s ease-in-out
  transition: all .2s ease-in-out

a:hover
  opacity: .7

.hr
  border: none
  border-bottom: 1px solid #dddddd
  border-top: 1px solid #ffffff
  height: 0
  line-height: 0
  clear: both
  width: 100%

.dotted
  border-style: dashed
  border-left: 0
  border-right: 0

.clearfix:after
  clear: both
  content: ' '
  display: block
  font-size: 0
  line-height: 0
  visibility: hidden
  width: 0
  height: 0

ol
  list-style: none
  padding: 0

#preloader
  background: #fff
  bottom: 0
  left: 0
  right: 0
  top:0
  position: fixed
  width: 100%
  height: 100%
  z-index: 999

#load
  background: url(../images/loading.gif) top center
  position: absolute
  left: 0
  right: 0
  margin: 0 auto
  top: 30%
  width: 200px
  height: 100px
  z-index: 999

a.sandy-btn-red,
a.sandy-btn-tran,
a.sandy-btn-word
  width: 200px
  text-align: center
  padding: 20px
  text-decoration: none
  font-size: 16px
  display: block
  margin: 0 auto
  border-radius: 4px

a.sandy-btn-red
  background-color: #ff3356
  color: white

.sandy-btn-word
  background: none
  color: #666666

a.sandy-btn-tran
  background: none
  border: 1px solid #a8a9aa
  color: white

a.sandy-btn-red:hover
  opacity: .8

a.sandy-btn-word:hover
  color: #666666

a.sandy-btn-tran:hover
  background-color: #a8a9aa
  opacity: 0.8

.sandy-top-btn
  padding: 20px 0
  margin: 20px 0 20px 0

.sandy-top
  height: 100%
  background: url(../img/bg.jpg) no-repeat top center
  width: 100%
  position: relative
  padding: 18% 0 0

.sandy-slogan
  text-align: center
  color: white

.sandy-slogan h4
  font-weight: 300
  margin: 0 0 10px

.top-nav-collapse
  background: rgba(0, 0, 0, 0.5) none repeat scroll 0 0 !important
  /*实现FF背景透明，文字不透明*/
  filter: Alpha(opacity=50)
  background: #fff
  /*实现IE背景透明*/

